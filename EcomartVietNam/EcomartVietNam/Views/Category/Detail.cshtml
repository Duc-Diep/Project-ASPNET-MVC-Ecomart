@model PagedList.IPagedList<EcomartVietNam.Models.Product>
@using PagedList.Mvc;

@{
    ViewBag.Title = ViewBag.Category.category_name;
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


<section class="inner-section single-banner">
    <div class="container">
        <h2>@ViewBag.Category.category_name</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                @ViewBag.Category.category_name
            </li>
        </ol>
    </div>
</section>
<section class="inner-section shop-part">
    <div class="container">
        <div class="row content-reverse">
            <div class="col-lg-3">
                <div class="shop-widget-promo">

                    <a href="#"><img src="~/wwwroot/images/promo/shop/01.jpg" alt="promo" /></a>
                </div>
                <div class="shop-widget">
                    <h6 class="shop-widget-title">Lọc theo giá</h6>
                    <form>
                        <div class="shop-widget-group">
                            <input type="text" placeholder="Bắt đầu" /><input type="text" placeholder="Kết thúc" />
                        </div>
                        <button class="shop-widget-btn">
                            <i class="fas fa-search"></i><span>tìm</span>
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="top-filter">
                            <div class="filter-short">
                                <label class="filter-label">Sắp xếp theo :</label><select class="form-select filter-select">
                                    <option selected>mặc định</option>
                                    <option value="3">mới nhất</option>
                                    <option value="1">giá từ thấp tới cao</option>
                                    <option value="2">giá từ cao tới thấp</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="product-card">
                                <div class="product-media">
                                    <img src="@Url.Content("~/wwwroot/product/images/" + item.product_image)"
                                            alt="product" width="100%" height="150px" class="img-responsive center-block" />
                                </div>
                                <div class="product-content">
                                    <h6 class="product-name">
                                        <a href="@Url.Action("Detail","Product",  new { id = item.product_id })">@item.product_name</a>
                                    </h6>
                                    <h6 class="product-price">
                                        <span>@string.Format("{0:#,##}", item.product_price) vnđ</span>
                                    </h6>
                                    <button class="product-add" title="Add to Cart">
                                        <i class="fas fa-shopping-basket"></i><span>mua hàng</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bottom-paginate">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions()
                                {
                                    LiElementClasses = new string[]{"page-item", "page-link" }
                                })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>