@model EcomartVietNam.Models.Product

@{
    ViewBag.Title = Model.product_name;
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

@section addcss{
    <link rel="stylesheet" href="~/wwwroot/css/custom/product-details.css" />
}
<section class="single-banner inner-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="#">Thịt - Cá - Trứng</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.product_name</li>
            </ol>
        </nav>
    </div>
</section>
<section class="inner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="details-gallery">
                    <ul class="details-preview">
                        <li>
                            <img src="@Url.Content("~/wwwroot/product/images/" + @Model.product_image)"
                                 alt="product" />
                        </li>
                    </ul>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="details-content">
                    <h3 class="details-name">
                        <a>@Model.product_name</a>
                    </h3>
                    <h3 class="details-price">
                        <span>@string.Format("{0:#,##}", Model.product_price) vnđ</span>
                    </h3>
                    <p class="details-desc">
                        Trọng lượng: @Model.product_weight
                    </p>
                    <p class="details-desc">
                        Xuất xứ: @Model.product_source
                    </p>
                    <p class="details-desc">
                        Tình trạng:
                        @if (Model.product_amount > 0)
                        {
                            <label class="details-label new">còn hàng</label>
                        }
                        else
                        {
                            <label class="details-label off">hết hàng</label> 
                        }
                    </p>
                    <div class="details-add-group">
                        <button class="product-add" title="Add to Cart">
                            <i class="fas fa-shopping-basket"></i><span>thêm vào giỏ hàng</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="inner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="product-details-frame">
                    <h3 class="frame-title">Mô tả</h3>
                    <div class="tab-descrip">
                        <p>
                            @Model.product_description
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>