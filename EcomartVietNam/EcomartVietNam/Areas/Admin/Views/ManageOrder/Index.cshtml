@model IEnumerable<EcomartVietNam.Models.Custom_order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section addcss{
    <!-- Datepicker CSS -->
    <link rel="stylesheet" href="~/Areas/Asset/css/bootstrap-datetimepicker.min.css" />

    <!-- Datatables CSS -->
    <link rel="stylesheet"
          href="~/Areas/Asset/plugins/datatables/datatables.min.css" />
}


<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Quản lý hoá đơn</h3>
            </div>
            
        </div>
    </div>
    <!-- /Page Header -->
   

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead class="text-center">
                                <tr>
                                    <th>#</th>
                                    <th>Mã đơn hàng</th>
                                    <th>Người mua</th>
                                    <th>Số tiền</th>
                                    <th>Ngày tạo</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @for (int i = 0; i < Model.ToList().Count; i++)
                                {
                                    
                                    <tr>
                                        <td>@(i+1)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.ToList()[i].order_id)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.ToList()[i].user_id)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.ToList()[i].amount)</td>
                                        <td>@Html.DisplayFor(modelItem => Model.ToList()[i].created_at)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model.ToList()[i].status)
                                        </td>
                                        <td>
                                            <a class="btn btn-sm bg-success-light mr-2">
                                                Cập nhật
                                            </a>
                                            <a class="btn btn-sm bg-success-light mr-2"
                                               href="@Url.Action("Details","ManageOrder", new { id=Model.ToList()[i].order_id })">
                                                Chi tiết
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>