
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section addscript{
    <script src="~/Areas/Asset/js/ckeditor.js"></script>

    <script>
        ClassicEditor.create(document.querySelector(".editor"), {
            toolbar: {
                items: [
                    "heading",
                    "|",
                    "bold",
                    "italic",
                    "link",
                    "bulletedList",
                    "numberedList",
                    "|",
                    "outdent",
                    "indent",
                    "|",
                    "imageUpload",
                    "blockQuote",
                    "insertTable",
                    "mediaEmbed",
                    "undo",
                    "redo",
                ],
            },
            language: "vi",
            licenseKey: "",
        })
            .then((editor) => {
                window.editor = editor;
            })
            .catch((error) => {
                console.error("Oops, something went wrong!");
                console.error(
                    "Please, report the following error on https://github.com/ckeditor/ckeditor5/issues with the build id and the error stack trace:"
                );
                console.warn("Build id: 6gev7fkzarkd-nohdljl880ze");
                console.error(error);
            });
    </script>
}
<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-8 offset-xl-2">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Sửa sản phẩm</h3>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->

            <div class="card">
                <div class="card-body">
                    <!-- Form -->
                    <form action="@Url.Action("Index","ManageProduct")">
                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            <input class="form-control" type="text" />
                        </div>
                        <div class="form-group">
                            <label>Ảnh đại diện</label>
                            <input class="form-control" type="file" />
                        </div>
                        <div class="form-group">
                            <div class="avatar">
                                <img class="avatar-img rounded"
                                     alt=""
                                     src="assets/img/sub-category/sub-category-01.jpg" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Giá bán</label>
                            <input class="form-control" type="number" />
                        </div>
                        <div class="form-group">
                            <label>Nguồn hàng:</label>
                            <input class="form-control" type="text" />
                        </div>
                        <div class="form-group">
                            <label>Trọng lượng</label>
                            <input class="form-control" type="text" />
                        </div>
                        <div class="form-group">
                            <label>Số lượng</label>
                            <input class="form-control" type="text" />
                        </div>
                        <div class="form-group">
                            <label>Danh mục</label>
                            <select class="form-control select">
                                <option>Chọn danh mục</option>
                                <option>Thịt - Cá - Trứng</option>
                                <option>Rau Củ Quả</option>
                                <option>Thực Phẩm Khô</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="">Mô tả</label>
                            <div class="centered">
                                <div class="editor-container">
                                    <div class="editor"></div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button class="btn btn-primary" type="submit">Sửa</button>
                            <a href="@Url.Action("Index","ManageProduct")" class="btn btn-link">Huỷ</a>
                        </div>
                    </form>
                    <!-- /Form -->
                </div>
            </div>
        </div>
    </div>
</div>

