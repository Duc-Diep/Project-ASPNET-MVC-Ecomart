
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section addcss{
    <!-- Datepicker CSS -->
    <link rel="stylesheet" href="~/Areas/Asset/css/bootstrap-datetimepicker.min.css" />

    <!-- Datatables CSS -->
    <link rel="stylesheet"
          href="~/Areas/Asset/plugins/datatables/datatables.min.css" />
}



<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Quản lý sản phẩm</h3>
            </div>
            <div class="col-auto text-right">
                <a class="btn btn-white filter-btn mr-3"
                   href="javascript:void(0);"
                   id="filter_search">
                    <i class="fas fa-filter"></i>
                </a>
                <a href="@Url.Action("Create","ManageProduct")"
                   class="btn btn-primary add-button ml-3">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>
    </div>
    <!-- /Page Header -->
    <!-- Search Filter -->
    <div class="card filter-card" id="filter_inputs">
        <div class="card-body pb-0">
            <form action="#" method="post">
                <div class="row filter-row">
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            <input class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label>Từ ngày</label>
                            <div class="cal-icon">
                                <input class="form-control datetimepicker"
                                       type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label>Đến ngày</label>
                            <div class="cal-icon">
                                <input class="form-control datetimepicker"
                                       type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Lọc
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- /Search Filter -->

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Danh mục</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th class="text-right">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>
                                        <img class="rounded service-img mr-1"
                                             src="~/Areas/Asset/img/sub-category/sub-category-01.jpg"
                                             alt="" />
                                        Thịt giò heo
                                    </td>
                                    <td>Thịt - Cá - Trứng</td>
                                    <td>30.000đ</td>
                                    <td>123</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("Update","ManageProduct")"
                                           class="btn btn-sm bg-success-light mr-2">
                                            <i class="far fa-edit mr-1"></i>Sửa
                                        </a>
                                        <a data-id="40"
                                           href="javascript:void(0);"
                                           class="
                                btn btn-sm
                                bg-danger-light
                                mr-2
                                delete_review_comment
                              ">
                                            <i class="far fa-trash-alt mr-1"></i> Xoá
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>